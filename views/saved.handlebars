<h1> Welcome To Your Saved Articles: <span><a href = "/">View All Articles</a> | <a href = "/api/articles/all">Articles JSON</a></span></h1>
<button id = "scrapeLatest" href = "/scrape">Scrape Articles</button>
<button id = "clearAll" href = "/clear">Clear All Data</button>

{{!-- ajax call for buttons to populate/clear onto homepage --}}

<ul class = "saved">
    {{#each articles}}
        <li articleId = {{_id}}>
            <div><a href = {{link}} target = "_blank">{{title}}</a></div>
            {{#if note}}
                <div class = "note" noteID={{note._id}}>Notes: {{note.text}}</div>
                <button class = "editNote">Edit</button>
                <form class = "editForm">
                    <input class= "text" placeholder="Enter Note" />
                    <button type = "submit">Submit</button>
                </form>
            {{/if}}
            {{#unless note}}
                <button class = "addNote">Add Note</button>
                <form class = "addForm">
                    <input class= "text" placeholder="Enter Note" />
                    <button type = "submit">Submit</button>
                </form>
            {{/unless}}
        </li>
    {{/each}}
</ul>
